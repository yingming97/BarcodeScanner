<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:visibility="gone"
        app:autoFocusButtonColor="@color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/white"
        app:flashButtonVisible="true"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@color/white"
        app:frameCornersRadius="10dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:maskColor="#77000000" />

    <LinearLayout
        android:id="@+id/layout_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_logo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imv_drop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_drop_down_24" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_bank"
        android:background="@color/white"
        android:elevation="10dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <EditText
        android:id="@+id/ed_so_tk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_bank"
        android:layout_marginTop="20dp"
        android:hint="Nhập số tài khoản"
        android:inputType="number"
        android:maxLength="19"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_check_account"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/layout_bank"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_baseline_check_circle_24"
        android:gravity="center"
        android:padding="10dp"
        android:text="Check" />

    <TextView
        android:id="@+id/tv_ten_tk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_so_tk"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_so_tien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ten_tk"
        android:layout_marginTop="20dp"
        android:hint="Nhập số tiền"
        android:inputType="number"
        android:maxLength="13"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_so_tien"
        android:layout_centerHorizontal="true"
        android:text="Tạo mã"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imv_qr_code"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_qr_code"
        android:layout_centerHorizontal="true" />
</RelativeLayout>